# ================================================
# COMPLETE ENVIRONMENT CONFIGURATION
# ================================================
# Copy this file to .env and add your API keys

# ================================================
# AI API KEYS (REQUIRED FOR FULL FUNCTIONALITY)
# ================================================

# Google Gemini API Key (for Gemini execution)
# Get yours at: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Anthropic Claude API Key (for THE_ORCHESTRATOR)
# Get yours at: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ================================================
# OPTIONAL API KEYS (FOR ENHANCED FEATURES)
# ================================================

# OpenAI API Key (optional - for GPT models)
OPENAI_API_KEY=

# Hugging Face API Key (optional - for open models)
HUGGINGFACE_API_KEY=

# ================================================
# SEO INTELLIGENCE PLATFORM APIS
# ================================================

# Ahrefs API (for backlink analysis)
AHREFS_API_KEY=
AHREFS_API_URL=https://api.ahrefs.com/v3

# SEMrush API (for competitor analysis)
SEMRUSH_API_KEY=

# Google Search Console API
GOOGLE_SEARCH_CONSOLE_CLIENT_ID=
GOOGLE_SEARCH_CONSOLE_CLIENT_SECRET=

# Moz API (for domain authority)
MOZ_ACCESS_ID=
MOZ_SECRET_KEY=

# ================================================
# BACOWR PLATFORM CONFIGURATION
# ================================================

# BACOWR Backend URL
BACOWR_API_URL=http://localhost:8080
BACOWR_API_KEY=

# Quality Control Levels
BACOWR_QC_BASIC_THRESHOLD=0.7
BACOWR_QC_ENHANCED_THRESHOLD=0.85
BACOWR_QC_PREMIUM_THRESHOLD=0.95

# ================================================
# DATABASE CONFIGURATION (OPTIONAL)
# ================================================

# PostgreSQL (for persistent storage)
DATABASE_URL=postgresql://user:password@localhost:5432/gemini_flow
POSTGRES_USER=gemini_user
POSTGRES_PASSWORD=secure_password
POSTGRES_DB=gemini_flow_db

# Redis (for caching and job queues)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# ================================================
# SERVER CONFIGURATION
# ================================================

# Backend Node.js Server
BACKEND_PORT=3001
BACKEND_HOST=localhost

# Frontend React Dev Server
FRONTEND_PORT=5173
FRONTEND_HOST=localhost

# Python Orchestrator API
ORCHESTRATOR_PORT=8000
ORCHESTRATOR_HOST=0.0.0.0

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:5174,http://localhost:3000,http://localhost:3001

# ================================================
# ORCHESTRATOR CONFIGURATION
# ================================================

# Orchestration Patterns
DEFAULT_ORCHESTRATION_PATTERN=hierarchical

# Agent Limits
MAX_AGENTS_PER_WORKFLOW=50
MAX_EXECUTION_TIME_SECONDS=300

# Consciousness Substrate
ENABLE_CONSCIOUSNESS_SUBSTRATE=true
CONSCIOUSNESS_SYNC_INTERVAL=1000

# Quality Gates
ENABLE_QUALITY_GATES=true
QUALITY_GATE_MIN_SCORE=0.8

# ================================================
# LOGGING AND MONITORING
# ================================================

# Logging Level (debug, info, warning, error)
LOG_LEVEL=info
LOG_FORMAT=json
LOG_TO_FILE=true
LOG_FILE_PATH=./logs/app.log

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true
PERFORMANCE_SAMPLE_RATE=0.1

# Error Tracking (Sentry)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# ================================================
# SECURITY
# ================================================

# JWT Secret (for authentication)
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# Session Secret
SESSION_SECRET=your_session_secret_change_this_in_production

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# ================================================
# DEVELOPMENT
# ================================================

# Node Environment
NODE_ENV=development

# Python Environment
PYTHON_ENV=development

# Debug Mode
DEBUG=false

# Hot Reload
HOT_RELOAD=true

# ================================================
# FEATURE FLAGS
# ================================================

# Enable specific features
ENABLE_ORCHESTRATOR=true
ENABLE_BACOWR=true
ENABLE_SEO_INTELLIGENCE=true
ENABLE_VISUAL_FLOW=true
ENABLE_ASYNC_EXECUTION=true
ENABLE_WEBHOOK_NOTIFICATIONS=false

# ================================================
# WEBHOOK ENDPOINTS (OPTIONAL)
# ================================================

# Webhook for execution completion
WEBHOOK_URL=
WEBHOOK_SECRET=

# Slack Notifications
SLACK_WEBHOOK_URL=
SLACK_CHANNEL=#orchestrator-alerts

# ================================================
# THIRD-PARTY INTEGRATIONS (OPTIONAL)
# ================================================

# GitHub (for code analysis)
GITHUB_TOKEN=
GITHUB_ORG=

# GitLab
GITLAB_TOKEN=
GITLAB_URL=https://gitlab.com

# Jira (for task management)
JIRA_URL=
JIRA_EMAIL=
JIRA_API_TOKEN=

# ================================================
# END OF CONFIGURATION
# ================================================