# Gemini Flow Backend Environment Variables

# Google Gemini API Key (required)
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Alternative API key name (optional)
GOOGLE_AI_API_KEY=your_google_ai_api_key_here

# Server Configuration
PORT=3001

# CORS Origins (for development)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Payload Validation Limits (optional - defaults shown)
# Request size limit (supports values like '1mb', '500kb', '2mb')
MAX_REQUEST_SIZE=1mb

# Workflow complexity limits
MAX_NODES=1000
MAX_EDGES=5000
MAX_NAME_LENGTH=200
MAX_DESCRIPTION_LENGTH=5000
MAX_TAGS=50

# Structure complexity limits
MAX_NESTED_DEPTH=10
MAX_ARRAY_LENGTH=10000

# Viewport limits for store state
MIN_VIEWPORT_ZOOM=0.1
MAX_VIEWPORT_ZOOM=10

# Rate limiting (for future implementation)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100